<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#091227"
    tools:context=".MusicActivity">


    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#091227"
        android:gravity="center"
        android:padding="10dp"
        android:text="Playing Now"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_back_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSongImage"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/tvSongName"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlay"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/tvSongName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228dp"
        android:backgroundTint="#091227"
        android:text="play"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="48dp" />

    <TextView
        android:id="@+id/SongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Song Name"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSongImage"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#07182c"
        android:src="@drawable/ic_baseline_skip_previous_24" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSongImage"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@id/btnPlay"
        android:background="#07182c"
        android:src="@drawable/ic_baseline_skip_next_24" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="walking..."
        android:textColor="@color/white"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvCurrentPlayingTime"
        android:layout_toStartOf="@+id/tvTotalPlayingTime"
        android:layout_below="@id/btnNext"
        android:progressBackgroundTint="@color/white"
        android:progressTint="#EDE8E8" />

    <TextView
        android:id="@+id/tvCurrentPlayingTime"
        android:layout_alignTop="@id/seekBar"
        android:layout_alignBottom="@id/seekBar"
        android:layout_marginStart="20dp"
        android:text="01:20"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTotalPlayingTime"
        android:layout_alignTop="@id/seekBar"
        android:layout_alignBottom="@id/seekBar"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:text="04:36"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationV"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:lottie_rawRes="@raw/walking_boy"
        android:layout_below="@id/SongName"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"/>

</RelativeLayout>